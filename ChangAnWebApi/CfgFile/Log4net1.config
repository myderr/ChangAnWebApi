<?xml version="1.0" encoding="utf-8"?>
<log4net>
	<!-- 将日志以回滚文件的形式写到文件中 -->
	<!-- 按日期切分日志文件，并将日期作为日志文件的名字 -->

	<!--WARN-->
	<appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
		<!--定义文件存放位置-->
		<file value="Log/error/"/>
		<rollingStyle value="Date" />
		<!--是否是向文件中追加日志-->
		<param name="AppendToFile" value="true" />
		<!--log保留天数-->
		<param name="MaxSizeRollBackups" value="100" />
		<!--最大文件大小-->
		<param name="MaxFileSize" value="5120000" />
		<!--日志文件名是否是固定不变的-->
		<param name="StaticLogFileName" value="false" />
		<!--日志文件名格式为:2008-08-31.log-->
		<param name="DatePattern" value="yyyy-MM-dd.'log'" />
		<!--日志根据日期滚动-->
		<param name="RollingStyle" value="Composite" />
		<!--多线程时采用最小锁定-->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<!--布局（向用户显示最后经过格式化的输出信息）-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline-------------------------------------------开始记录-----------------------------------------%newline%date| %newline%message%newline-------------------------------------------结束记录----------------------------------------------%newline" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="WARN" />
			<levelMax value="FATAL" />
		</filter>
	</appender>
	<!--FATAL-->

	<!--WARN-->
	<appender name="RuntimeLog" type="log4net.Appender.RollingFileAppender">
		<!--定义文件存放位置-->
		<file value="Log/runtime/"/>
		<rollingStyle value="Date" />
		<!--是否是向文件中追加日志-->
		<param name="AppendToFile" value="true" />
		<!--log保留天数-->
		<param name="MaxSizeRollBackups" value="100" />
		<!--最大文件大小-->
		<param name="MaxFileSize" value="5120000" />
		<!--日志文件名是否是固定不变的-->
		<param name="StaticLogFileName" value="false" />
		<!--日志文件名格式为:2008-08-31.log-->
		<param name="DatePattern" value="yyyy-MM-dd.'log'" />
		<!--日志根据日期滚动-->
		<param name="RollingStyle" value="Composite" />
		<!--多线程时采用最小锁定-->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<!--布局（向用户显示最后经过格式化的输出信息）-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline-------------------------------------------开始记录-----------------------------------------%newline%date| %newline%message%newline-------------------------------------------结束记录----------------------------------------------%newline" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="INFO" />
			<levelMax value="INFO" />
		</filter>
	</appender>
	<!--FATAL-->

  <!--WARN-->
  <appender name="StatusLog" type="log4net.Appender.RollingFileAppender">
    <!--定义文件存放位置-->
    <file value="Log/status/"/>
    <rollingStyle value="Date" />
    <!--是否是向文件中追加日志-->
    <param name="AppendToFile" value="true" />
    <!--log保留天数-->
    <param name="MaxSizeRollBackups" value="365" />
    <!--最大文件大小-->
    <param name="MaxFileSize" value="5120000" />
    <!--日志文件名是否是固定不变的-->
    <param name="StaticLogFileName" value="false" />
    <!--日志文件名格式为:2008-08-31.log-->
    <param name="DatePattern" value="yyyy-MM-dd.'log'" />
    <!--日志根据日期滚动-->
    <param name="RollingStyle" value="Composite" />
    <!--多线程时采用最小锁定-->
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <!--布局（向用户显示最后经过格式化的输出信息）-->
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%newline-------------------------------------------开始记录-----------------------------------------%newline%date| %newline%message%newline-------------------------------------------结束记录----------------------------------------------%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="Debug" />
      <levelMax value="Debug" />
    </filter>
  </appender>
  <!--FATAL-->

	<root>
		<!-- 控制级别，由低到高：ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
		<!-- 比如定义级别为INFO，则INFO级别向下的级别，比如DEBUG日志将不会被记录 -->
		<!-- 如果没有定义LEVEL的值，则缺省为DEBUG -->
		<level value="ALL" />
		<!-- 按日期切分日志文件，并将日期作为日志文件的名字 -->
		<appender-ref ref="ErrorLog" />
		<appender-ref ref="RuntimeLog" />
    <appender-ref ref="StatusLog" />
	</root>
</log4net>